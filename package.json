{
  "name": "threepie-stock-news-website",
  "version": "0.1.0",
  "private": true,
  "description": "Threepie Stock News Website",
  "sasslintConfig": ".sass-lint.yml",
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts-ts": "2.16.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-ts",
    "build-ts": "react-scripts-ts build",
    "build": "npm-run-all build-css build-ts",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "magic": "webpack",
    "scsslint": "sass-lint -c .sass-lint.yml -v"
  },
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.1.2",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "classnames": "^2.2.5",
    "d3": "^5.4.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "react-scripts": "^1.1.4",
    "typescript": "^2.8.3"
  }
}
